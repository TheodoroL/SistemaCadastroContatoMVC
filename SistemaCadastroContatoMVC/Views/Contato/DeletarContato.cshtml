@model ContatoModel;
@{
	ViewData["Title"] = "Confirmação para apagar o Contato";
}

<div class="text-center">
	<h2>Realmente tem certeza que deseja apagar o contato (@Model.Nome) ?</h2>
</div>


<a class="btn btn-primary w-100 mb-2 mt-2" asp-controller="Contato" asp-action="Index">Cancelar Execlusão</a>

@* é precisso colocar o asp-route-id para o delete funcionar, afinal sem id não tem como deletar :> *@
<a class="btn btn-success w-100" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="ConfirmacaoDeletarContato">Confimar Exclusão</a>

